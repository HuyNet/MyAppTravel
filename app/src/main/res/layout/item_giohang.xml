<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:elevation="8dp"
    app:cardCornerRadius="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="193dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:weightSum="10">

        <ImageView
            android:id="@+id/item_image_dl"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:src="@drawable/iconnew_w512" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_txt_ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Ten dia diem"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:textStyle="bold"
                android:id="@+id/item_txt_batdau"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngay bat dau"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp" />
            <TextView
                android:textStyle="bold"
                android:id="@+id/item_txt_ketthuc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ngay ket thuc"
                android:textColor="@android:color/holo_red_light"
                android:textSize="18sp" />
            <LinearLayout
                android:weightSum="18"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/item_txt_giadl"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_red_light"
                    android:text="15000"
                    android:layout_weight="5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/item_giam"
                    android:src="@drawable/ic_remove"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_txt_soluong"
                    android:text="1"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_weight="2"
                    android:textColor="@android:color/holo_green_dark"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:id="@+id/item_tang"
                    android:src="@drawable/ic_add"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <ImageView
                    android:src="@drawable/ic_handle"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:id="@+id/item_txt_giadl1"
                    android:text="15000"
                    android:textStyle="bold"
                    android:layout_weight="5"
                    android:textSize="18sp"
                    android:textColor="@android:color/holo_red_light"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>